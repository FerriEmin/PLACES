<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTEST.View.ActivityDetailsPage"
             xmlns:viewmodel="clr-namespace:MauiAppTEST.ViewModel"
             x:DataType="viewmodel:ActivityDetailsViewModel"
             Shell.PresentationMode="ModalAnimated"
             Title="ActivityDetailsPage">
    
    <VerticalStackLayout>
        <Label Text="{Binding Post.Name}"/>
        <Label Text="{Binding Post.Details}"/>
        <Label Text="{Binding Review.Rating}"/>
        <Label Text="{Binding Review.Comment}"/>
        
        <HorizontalStackLayout>
            <Image Source="logo.png" Style="{StaticResource RatingImages}" x:Name="star1"/>
            <Image Source="logo.png" Style="{StaticResource RatingImages}" x:Name="star2"/>
            <Image Source="logo.png" Style="{StaticResource RatingImages}" x:Name="star3"/>
            <Image Source="logo.png" Style="{StaticResource RatingImages}" x:Name="star4"/>
            <Image Source="logo.png" Style="{StaticResource RatingImages}" x:Name="star5"/>
        </HorizontalStackLayout>

        <!--<Label Text="{Binding rating}"/>-->
    </VerticalStackLayout>
    
    
</ContentPage>

